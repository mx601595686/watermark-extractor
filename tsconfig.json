{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "removeComments": false,
        "preserveConstEnums": false,
        "declaration": true,
        "experimentalDecorators": false,
        "noEmitOnError": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "lib": [
            "esnext"
        ]
    },
    "exclude": [
        "node_modules",
        "bin"
    ]
}